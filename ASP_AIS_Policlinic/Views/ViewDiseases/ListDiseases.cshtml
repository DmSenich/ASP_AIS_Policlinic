@model IEnumerable<ASP_AIS_Policlinic.Models.Disease>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список диагнозов</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiseaseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visiting.DateVisiting)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiseaseType.NameDisease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visiting.DateVisiting)
                </td>
                 <td>
                     <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                 </td>
                
            </tr>
        }
    </tbody>
</table>
