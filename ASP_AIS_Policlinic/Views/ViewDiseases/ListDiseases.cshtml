@model IEnumerable<ASP_AIS_Policlinic.Models.Disease>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список диагнозов</h1>
<p>
    <a asp-action="GetReport" asp-route-id="@ViewBag.PatientId" asp-route-dateRange="@ViewBag.DateRange">Создать отчет об истории заболеваний</a>
</p>
<form asp-action="ListDiseases">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Даты
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" id="dateRange" value="@ViewBag.DateRange" name="dateRange" />
                    <input type="submit" value="Подтвердить" class="btn btn-primary" />
                    @* <a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                </td>
            </tr>
        </tbody>
    </table>
</form>
<form asp-action="ListDiseases">
    <input type="hidden" value="@null" name="dateRange" />
    <input type="submit" value="Сбросить" class="btn btn-primary" />
</form>

<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DiseaseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visiting.DateVisiting)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.DiseaseType.NameDisease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visiting.DateVisiting)
                </td>
                 <td>
                     <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                 </td>
                
            </tr>
        }
    </tbody>
</table>
