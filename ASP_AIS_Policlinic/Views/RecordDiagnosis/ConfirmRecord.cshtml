@{
}
@model ASP_AIS_Policlinic.Models.Visiting
@{
    ViewData["Title"] = "ConfirmRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подтверждение записи</h1>
@*<div class="form-group">
    <a asp-controller="Patients" asp-action="Create" asp-route-fromRecordDiagnosis="true"
       class="btn btn-info">Создать нового</a>
</div>*@
@using (Html.BeginForm("ConfirmRecord", "RecordDiagnosis", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Пациент</label>
            <div class="col-md-10">
                <label class="control-label col-md-10">@ViewBag.Patient.FirstName  @ViewBag.Patient.LastName @ViewBag.Patient.Patronymic</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Доктор</label>
            <div class="col-md-10">
                <label class="control-label col-md-10">@ViewBag.Doctor.FirstName  @ViewBag.Doctor.LastName @ViewBag.Doctor.Patronymic</label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Дата встречи</label>
            <div class="col-md-10">
                <label class="control-label col-md10">@ViewBag.VisitingDate</label>
            </div>
        </div>

        <input type="hidden" asp-for="PatientId" value="@ViewBag.Patient.Id" />
        <input type="hidden" asp-for="DoctorId" value="@ViewBag.Doctor.Id" />
        <input type="hidden" asp-for="DateVisiting" value="@ViewBag.VisitingDate" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Подтвердить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}