@model ASP_AIS_Policlinic.Models.ViewModels.SpecialtyDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>
<p>
    <a asp-action="GetReportAboutDoctor" asp-route-id="@Model.Specialty.Id">Создать отчет о докторах</a>
</p>

<div>
    <h4>Специальность</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty.NameSpecialty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Specialty.NameSpecialty)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Specialty.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

<div class="container p-0">
    <div class="row pb-3">
        <div class="col-md-9">
            <h4>Врачи</h4>
        </div>
        <div class="col-md-3 text-end">
            <a asp-action="AddDoctorToSpecialty" asp-route-id="@Model.Specialty.Id" class="btn btn-info">Изменить</a>
        </div>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctors.First().LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-controller="Doctors" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Doctors" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>