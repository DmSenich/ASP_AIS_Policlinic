@model ASP_AIS_Policlinic.Models.ViewModels.SpecialtyDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>
<p>
    <a asp-action="GetReportAboutDoctor" asp-route-id="@Model.Specialty.Id">Создать отчет о докторах</a>
</p>

<div>
    <h4>Специальность</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty.NameSpecialty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Specialty.NameSpecialty)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Specialty.Id">Редактировать</a><p>|</p>
    }
    
    <a asp-action="Index">Вернуться к списку</a>
</div>

<div class="container p-0">
    <div class="row pb-3">
        <div class="col-md-9">
            <h4>Врачи</h4>
        </div>
        @if (User.IsInRole("admin"))
        {
            <div class="col-md-3 text-end">
                <a asp-action="AddDoctorToSpecialty" asp-route-id="@Model.Specialty.Id" class="btn btn-info">Изменить</a>
            </div>
        }
        

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                ФИО
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    <a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.Id">Подробности</a> |
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-controller="Doctors" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> <p>|</p>

                        <a asp-controller="Doctors" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>