@model IEnumerable<ASP_AIS_Policlinic.Models.Doctor>

@{
    ViewData["Title"] = "AddDoctorToSpecialty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавить/убрать специальность</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                ФИО
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @if (item.Specialties.Count(d => d.Id == ViewBag.SpecialtyId) != 0)
                    {
                        <form method="post">
                            <input type="hidden" name="doctorId" value="@item.Id">
                            <input type="hidden" name="specialtyId" value="@ViewBag.SpecialtyId">
                            <input type="submit" value="Убрать" class="btn btn-danger">
                        </form>
                    }
                    else
                    {

                        <form method="post">
                            <input type="hidden" name="doctorId" value="@item.Id">
                            <input type="hidden" name="specialtyId" value="@ViewBag.SpecialtyId">
                            <input type="submit" value="Выбрать" class="btn btn-success">
                        </form>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>
