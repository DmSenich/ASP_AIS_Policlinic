@model IEnumerable<ASP_AIS_Policlinic.Models.DiseaseType>

@{
    ViewData["Title"] = "EditDiseaseType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditDiseaseType</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameDisease)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameDisease)
                </td>
                <td>
                    <form method="post">
                        <input type="hidden" name="diseaseId" value="@ViewBag.DiseaseId">
                        <input type="hidden" name="diseaseTypeId" value="@item.Id">
                        <input type="hidden" name="visitingId" value="@ViewBag.VisitingId" />
                        <input type="submit" value="Выбрать" class="btn btn-success">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
