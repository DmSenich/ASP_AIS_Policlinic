@model ASP_AIS_Policlinic.Models.Disease

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создать</h1>

<h4>Диагнозы</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="VisitingId" value="@ViewBag.VisitingId"/>
            </div>
            
            <div class="form-group">
                <label asp-for="DiseaseTypeId" class="control-label"></label>
                @*<input type="hidden" asp-for="DiseaseTypeId" class="form-control" asp-items="ViewBag.DiseaseTypeId" />*@
                <input type="text" readonly="readonly" class="form-control" value="@ViewBag.diseaseType" />
                <input type="hidden" asp-for="DiseaseTypeId" value="@ViewBag.diseaseTypeId" />
                <span asp-validation-for="DiseaseTypeId" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="EditDiseaseType" asp-route-toCreate="@true" asp-route-visitingId="@ViewBag.VisitingId" class="btn btn-info">Выбрать тип</a>
            </div>
           
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                @if (ViewBag.diseaseTypeId != null)
                {
                    <textarea asp-for="Description" id="summernote"></textarea>
                }
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            
            @*<div class="form-group">
                <label asp-for="DiseaseTypeId" class="control-label"></label>
                <select asp-for="DiseaseTypeId" class ="form-control" asp-items="ViewBag.DiseaseTypeId"></select>
            </div>*@
@*            <div class="form-group">
                <label asp-for="VisitingId" class="control-label"></label>
                <select asp-for="VisitingId" class ="form-control" asp-items="ViewBag.VisitingId"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
