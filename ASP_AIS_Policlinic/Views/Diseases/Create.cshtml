@model ASP_AIS_Policlinic.Models.Disease

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создать</h1>

<h4>Диагнозы</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseTypeId" class="control-label"></label>
                <select asp-for="DiseaseTypeId" class ="form-control" asp-items="ViewBag.DiseaseTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VisitingId" class="control-label"></label>
                <select asp-for="VisitingId" class ="form-control" asp-items="ViewBag.VisitingId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
