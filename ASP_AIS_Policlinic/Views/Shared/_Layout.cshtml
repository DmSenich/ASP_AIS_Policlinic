    @using Microsoft.AspNetCore.Identity
    @using ASP_AIS_Policlinic.Areas.Identity.Data
    @inject UserManager<PoliclinicUser> UserManager
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP_AIS_Policlinic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RecordDiagnosis" asp-action="Index">Записаться к врачу</a>
                        </li>
                        
                        <li class="nav-item">
                            @if (User.IsInRole("guest"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="ViewDiseases" asp-action="Index" asp-route-id="@((await UserManager.GetUserAsync(User)).ModelId)">История болезни</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="ViewDiseases" asp-action="Index">История болезни</a>
                            }
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="@Url.Action("Index", "Doctors")" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Контроллеры
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("Index", "Doctors")">Врачи</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Patients")">Пациенты</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Diseases")">Диагнозы</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "DiseaseTypes")">Типы заболеваний</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Specialties")">Специальности</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Visitings")">Визиты</a>
                                <!-- Добавьте другие элементы списка здесь -->
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ASP_AIS_Policlinic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

