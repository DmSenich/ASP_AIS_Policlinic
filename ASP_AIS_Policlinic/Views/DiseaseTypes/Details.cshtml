@model ASP_AIS_Policlinic.Models.ViewModels.DiseaseTypeDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>
<p>
    <a asp-action="GetReport" asp-route-id="@Model.DiseaseType.Id">Создать отчет о случаях заболевания</a>
</p>
<div>
    <h4>Тип заболевание</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiseaseType.NameDisease)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiseaseType.NameDisease)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DiseaseType.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

<div class="container p-0">
    <div class="row pb-3">
        <div class="col-md-9">
            <h4>Поставленные диагнозы</h4>
        </div>
        <div class="col-md-3 text-end">
            <a asp-action="AddDiseaseToDiseaseType" asp-route-id="@Model.DiseaseType.Id" class="btn btn-info">Добавить к диагнозу</a>
        </div>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Diseases.First().Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Diseases)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-controller="Diseases" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Diseases" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Diseases" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
