@model ASP_AIS_Policlinic.Models.ViewModels.DoctorDetailsViewModel
@using Microsoft.AspNetCore.Identity
@using ASP_AIS_Policlinic.Areas.Identity.Data
@inject UserManager<PoliclinicUser> UserManager
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Details</h1>

<div>
    <h4>Doctor</h4>
    <hr />
    @if(ViewBag.Photodata != null)
    {
        <img class="mt-4 mb-4" width="600" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Photodata))"/>
    }

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.Patronymic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Patronymic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.WorkExperience)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.WorkExperience)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.PathPhoto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.PathPhoto)
        </dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("admin") ||(User.IsInRole("coach") && Model?.Doctor.Id == (await UserManager.GetUserAsync(User)).ModelId))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Doctor.Id">Edit</a> 
    }
    |<a asp-action="Index">Back to List</a>
</div>

<div class="container p-0">
    <div class="row pb-3">
        <div class="col-md-9">
            <h4>Специальности</h4>
        </div>
        @if (User.IsInRole("admin") || (User.IsInRole("coach") && Model?.Doctor.Id == (await UserManager.GetUserAsync(User)).ModelId))
        {
            <div class="col-md-3 text-end">
                <a asp-action="AddSpecialtyToDoctor" asp-route-id="@Model.Doctor.Id" class="btn btn-info">Изменить</a>
            </div>
        }
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialties.First().NameSpecialty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Specialties)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameSpecialty)
                </td>
                @if (User.IsInRole("admin") || (User.IsInRole("coach") && Model?.Doctor.Id == (await UserManager.GetUserAsync(User)).ModelId))
                {
                    <td>
                        <a asp-controller="Specialties" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-controller="Specialties" asp-action="Edit" asp-route-id="@item.Id">Edit</a> <p>|</p>
                            <a asp-controller ="Specialties" asp-action = "Delete" asp-route-id = "@item.Id" > Delete </a>
                        }
                        
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
