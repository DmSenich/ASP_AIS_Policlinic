@model ASP_AIS_Policlinic.Models.Doctor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать</h1>

<h4>Доктор</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkExperience" class="control-label"></label>
                <input asp-for="WorkExperience" class="form-control" />
                <span asp-validation-for="WorkExperience" class="text-danger"></span>
            </div>
            <input type="hidden" name="PathPhoto" value="@Model.PathPhoto"/>
            
            @if(ViewBag.Photodata != null)
            {
                <img class="mt-4 mb-4" width="600" src="data:image/jpeg:base64,@(Convert.ToBase64String(ViewBag.Photodata))" />
            
            }
            <div class="form-group">
                <div class="mt-4">
                    <input type="file" name="upload" class="form-control"/><br />
                </div>
            </div>
            @*<div class="form-group">
                <label asp-for="PathPhoto" class="control-label"></label>
                <input asp-for="PathPhoto" class="form-control" />
                <span asp-validation-for="PathPhoto" class="text-danger"></span>
            </div>*@
            <div class="form-group"><b>Специальности</b><br />
                @*@foreach(Specialty sp in ViewBag.Specialties as ICollection<Specialty>)
                {
                    <input type="checkbox" name="selectedSpecialties" value="@sp.Id"
                    @(Model.Specialties.Contains(sp) ? "checked=\"checked\"" : "") />@sp.NameSpecialty<br />
                }*@
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
